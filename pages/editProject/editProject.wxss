/* pages/editProject/editProject.wxss */

.project-name{
  width: 100%;
  height: 100%;
  font-size: 30rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.floor{
  width:690rpx;
  font-size: 30rpx;
  background:#fff;
  border:1px solid #E5E5E5;
  border-radius:10rpx;
  margin: 28rpx auto 0;
}
.floor:last-of-type{
  margin-bottom: 60rpx;
}
.floor .title{
  line-height: 40rpx;
  color: #629AF9;
  background: #f7faff;
  padding: 24rpx 0;
  border-bottom: 1px solid #E5E5E5;
  border-radius: 10rpx 10rpx 0 0;
}
.floor .title .icon{
  display: inline-block;
  width:8rpx;
  height:40rpx;
  background: #629AF9;  
  margin-right: 20rpx;
  float: left;
}
.floor .item{
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 30rpx;
  border-bottom: 1px dotted  #E5E5E5;
}
.floor .remind-set{
 height: auto;
  line-height: 90rpx;
  padding-bottom: 10rpx;
}
.floor .item:last-of-type{
  border-bottom: 0;
}
.floor .item .item-ti{
  color: #666;
  float: left;
}
.floor .item .line{
  color: #E5E5E5;
  float: right;
  margin: 0 30rpx;
}
.floor .item picker{
    display: inline-block;
    float: right;
}
.floor .set{
  float: right;
}
.floor .no-set{
  color: #999;
}
.floor .item .arrow-right{
  width:14rpx;
  height:24rpx;
  margin-left: 15rpx;
}
.floor .item .set{
  width: 80%;
  text-align: right;
}
.floor .item .set-data{
  width: 100%;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #629AF9;
  overflow: hidden;
}
.save-btn{
  width:600rpx;
  height:90rpx;
  font-size: 34rpx;
  color: #fff;
  background:#629AF9;
  border-radius:10rpx;
}
.delete-btn{
  width:600rpx;
  height:90rpx;
  font-size: 30rpx;
  color: #666;
  background:#f8f8f8;
}
button::after{
border: none;
}

.w540{
  width: 540rpx;
  text-align: center;
}
