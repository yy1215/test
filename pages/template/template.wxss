page{
  background: #fff;
}
.seciton{
  padding-top: 42rpx;
}
.item-box{
  width: 300rpx;
  float: left;
  margin: 0 0 32rpx 50rpx
}
.item-box .img-box{
  width: 100%;
  height: 300rpx;
  margin-bottom: 16rpx;
  box-shadow:0px 0px 10px rgba(98,154,249,0.3);
  position: relative;
}
.item-box .img-box image{
  width: 100%;
  height: 100%;
}
.img-layer{
  width: 100%;
  height: 100%;
  background:#000 url('http://bxkc.oss-cn-shanghai.aliyuncs.com/cdn/wx/magpie/img/mb-duigou.png') no-repeat center;
  opacity:0.2;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
}
.item-box .title{
  font-size:30rpx;
  color: #333;
  text-align: center;
}
.item-box .title .line{
  display: block;
  width:50rpx;
  height:4rpx;
  background:rgba(98,154,249,1);
  margin: 14rpx auto;
}
.remark{
  width: 145rpx;
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin: 50rpx auto 20rpx;
}
.prompt{
  font-size: 28rpx;
  color: #f00;
  text-align: center;
  margin-bottom: 140rpx;
}
.confirm-btn{
  width:100%;
  line-height: 90rpx;
  font-size: 34rpx;
  color: #629AF9;
  background: #fff;
  box-shadow:0px 0px 10px rgba(4,0,0,0.08);
  position: fixed;
  bottom: 0;
  left: 0;
}
.confirm-btn::after{
  border-radius: 0;
}